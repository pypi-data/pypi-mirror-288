  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test: with single PATH",
      "type": "debugpy",
      "request": "launch",
      "module": "magic_lantern",
      "args": ["${workspaceFolder}/tests/images"]
      // "env": { "magic_lantern_PROFILE": "active if this variable exists" }
      // "console": "integratedTerminal"
    },
    {
      "name": "Test: Help",
      "type": "debugpy",
      "request": "launch",
      "module": "magic_lantern",
      "args": ["--help"]
      // "console": "integratedTerminal"
    },
    {
      "name": "Test: with config file",
      "type": "debugpy",
      "request": "launch",
      "module": "magic_lantern",
      "args": ["-c", "${workspaceFolder}/tests/example.toml"]
      // "env": { "magic_lantern_PROFILE": "active if this variable exists" }
      // "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["test"]
    },
    {
      "name": "pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      // "args": ["-s"] // Don't capture
    },
  ]
}
